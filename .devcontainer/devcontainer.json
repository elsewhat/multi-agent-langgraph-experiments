// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Langgraph",
    "image": "mcr.microsoft.com/devcontainers/python:3",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"customizations": {
		"vscode": {
		  // Spell checker extension
		  "extensions": ["ms-python.python"]
		}
	},
	"containerEnv": {"PYTHONPATH": "/workspaces/multi-agent-langgraph-experiments"},			
	
	"postCreateCommand": "apt-get update && apt-get -y install python3-dev graphviz libgraphviz-dev pkg-config && pip3 install -r requirements.txt",

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8000,8080],

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}